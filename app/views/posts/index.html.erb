<h2>スケジュール一覧</h2>

<% if flash[:notice] %>
  <div class="flash"><%= flash[:notice] %></div>
<% end %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>スケジュール更新日時</th>
      <th>確認</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post|%>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.start_day.strftime("%Y年%m月%d日") %></td>
        <td><%= post.end_day.strftime("%Y年%m月%d日") %></td>
        <% if post.all_day.to_s === "0" %>
          <% ox = "" %>
        <% else %>
          <% ox = "◯" %>
        <% end %>
        <td><%= ox %></td>
        <td><%= post.updated_at.to_s(:datetime_jp) %></td>
        <td><%= link_to "確認" , post_path(post), class:"link_to" %></td>
        <td><%= link_to "編集" , edit_post_path(post), class:"link_to" %></td>
        <td><%= link_to "削除" , post_path(post) , method: :delete , data:{confirm: "削除していいですか" }, class:"link_to" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
  <ul>
    <li><%= link_to "スケジュール新規登録" , new_post_path, class:"link_to" %></li>
  </ul>
</div>

<footer>
	<% date = Date.current %>
	現在の日時：<%= date.strftime("%Y年%m月%d日") %>　
  スケジュール合計：<%= Post.count %>
</footer>